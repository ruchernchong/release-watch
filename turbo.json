{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "envMode": "loose",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!README.md"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "start": {
      "dependsOn": ["build"],
      "persistent": true,
      "with": ["@release-watch/api#dev"]
    },
    "lint": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", "!README.md"]
    },
    "format": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!README.md"]
    },
    "deploy": {
      "dependsOn": ["build"],
      "cache": false
    },
    "auth:generate": {
      "cache": false,
      "interactive": true
    },
    "db:drop": {
      "cache": false,
      "interactive": true
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "interactive": true
    }
  }
}
